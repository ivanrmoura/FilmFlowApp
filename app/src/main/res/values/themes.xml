<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NinjaFlixMVVM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">#8F0826</item>
        <item name="colorPrimaryDark">#85142E</item>
        <item name="colorAccent">@color/colorImagePlaceholder</item>
    </style>

    <style name="Theme.NinjaFlixMVVM" parent="Base.Theme.NinjaFlixMVVM" />

    <!-- Corner of cardview -->
    <style name="ShapeAppearanceOverlay.App.Card.Media" parent="">
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>


    <style name="Theme.NinjaFlixMVVM.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <style name="Theme.CollapsingToolbar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.CollapsingToolbar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

</resources>